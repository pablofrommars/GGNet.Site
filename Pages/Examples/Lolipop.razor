@code {

    Data<Weapon.Point, double, double> weapon;

    protected override void OnInitialized()
    {
        var n = 15;

        var data = Weapon.Load()
            .OrderByDescending(o => o.Value)
            .Take(n)
            .Select((o, i) => new Weapon.Point
            {
                Id = n - i,
                Country = o.Country,
                Value = o.Value
            })
            .OrderBy(o => o.Id)
            .ToList();

        var labeller = new Formats.Labeller<double>(data.ToDictionary(o => (double)o.Id, o => o.Country));

        var source = new GGNet.Source<Weapon.Point>(data);

        weapon = Plot.New(source, o => o.Value, o => o.Id)
            .Geom_Segment(x: o => 0, xend: o => o.Value, y: o => o.Id, yend: o => o.Id, color: "#808080")
            .Geom_Point(tooltip: o => $"<b>{o.Value:#,##0}</b>", color: "#69b3a2", animation: true)
            .Scale_X_Continuous(expand: (0.0, 0.0, 0.05, 0.0))
            .Scale_Y_Discrete(expand: (0.0, 0.5, 0, 0.5), formatter: labeller)
            .XLab("Weapon Quantity")
            .Caption("SIPRI trend-indicator value")
            .Theme(dark: false);
    }
