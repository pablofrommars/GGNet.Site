@code {

    Data<Beatles.Point, double, double> beatles1;

    protected override void OnInitialized()
    {
        beatles1 = Plot.New(Beatles.Load(), x: o => o.Year)
            .Geom_Area(y: o => o.N)
            .Geom_VLine(new[] { 1984 }, o => o, color: "#FFFFFF", lineType: LineType.Dashed)
            .Scale_Fill_Discrete(o => o.Name, GGNet.Colors.FT, guide: false)
            .Facet_Wrap(selector: o => o.Name, freeY: true)
            .Title("Popularity of Beatles Names")
            .YLab("#")
            .XLab("Year")
            .Theme();
    }
}
