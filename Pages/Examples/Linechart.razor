            <div class="col-md-6">
                <div class="border rounded-lg p-1 shadow-sm">
                    <Plot Data=@beatles2 T=Beatles.Point TX=Double TY=Double />
                </div>
            </div>

        </div>
    </div>

@code {

    Data<Beatles.Point, double, double> beatles2;

    protected override void OnInitialized()
    {
        var source = new Source<Beatles.Point>(Beatles.Load().Where(o => o.Year >= 1984));

        beatles2 = Plot.New(source, x: o => o.Year, y: o => o.N)
            .Geom_Line(width: 2.0)
            .Scale_Color_Discrete(o => o.Name, Colors.Ipsum, guide: true)
            .Scale_LineType_Discrete(o => o.Name, guide: false)
            .Title("Popularity of Beatles Names Since 1984")
            .YLab("#")
            .XLab("Year")
            .Theme(dark: false, legend: Position.Bottom);
    }
}
